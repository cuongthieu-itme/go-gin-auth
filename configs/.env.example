# Cổng chạy server
APP_PORT=8080
APP_ENV=development

# Cài đặt database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=root
DB_NAME=authdb

# Khóa bí mật để tạo JWT token (QUAN TRỌNG: đổi khi deploy thật)
JWT_ACCESS_SECRET=supersecretaccess
JWT_REFRESH_SECRET=supersecretrefresh
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# Mức độ log
LOG_LEVEL=info

# CORS - website nào được gọi API
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting - chống spam
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Độ mạnh mã hóa password
BCRYPT_COST=12
